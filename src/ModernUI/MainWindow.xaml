<mui:ModernWindow x:Class="ModernUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="Moleclue Splitter" IsTitleVisible="True"
        ContentSource="/Pages/Home.xaml"
        Height="500" MinWidth="700" MinHeight="400">

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="Select Operation">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="Mole Split" Source="/Pages/Home.xaml" />
                <mui:Link DisplayName="Split Batch" Source="/Pages/ParseBatchPage.xaml"/>
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="settings" GroupKey="settings">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="software" Source="/Pages/SettingsPage.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="settings" Source="/Pages/SettingsPage.xaml" />
    </mui:ModernWindow.TitleLinks>
</mui:ModernWindow>
